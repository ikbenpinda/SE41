<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.etienne.pizzapp.ConfirmOrder"
    android:orientation="vertical"
    android:weightSum="1">

    <ListView
        android:id="@+id/pizzasListView"
        android:layout_width="fill_parent"
        android:layout_height="204dp">

        </ListView>

    <TextView android:layout_width="fill_parent"
        android:layout_height="5dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_gravity="fill"
        android:hint="@string/lbl_confirmorder_extrainfo"
        android:importantForAccessibility="yes"
        android:layout_weight="0.65"
        android:gravity="top" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_confirmorder_addpizza"
        android:paddingTop="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="0.15" />

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_confirmorder_confirm"
        android:layout_marginTop="0dp"
        android:layout_weight="0.14" />

</LinearLayout>
